BoxLayout:
    orientation: 'vertical'

    BoxLayout:
        orientation: 'horizontal'
        Button:
            text: 'Up'
            on_press: app.handle_increment(1)
        TextInput:
            id: miles_input
            text: '0'
            multiline: False
        Button:
            text: 'Down'
            on_press: app.handle_increment(-1)

    Button:
        text: 'Convert'
        on_press: app.handle_convert()

    Label:
        text: '0.0 km'
        id: km_label
        font_size: 32

